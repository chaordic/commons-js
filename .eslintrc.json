{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true
  },
  "rules": {
    "import/prefer-default-export": 0,
    "max-len": ["error", {
      "code": 80,
      "ignoreUrls": true,
      "ignoreTemplateLiterals": true,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": true
    }],
    "object-curly-newline": ["error", {
      "consistent": true
    }]
  },
  "settings": {
    "import/resolver": {
      "webpack": {}
    }
  }
}
