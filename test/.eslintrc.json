{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true
  },
  "rules": {
    "func-names": 0,
    "import/prefer-default-export": 0,
    "prefer-arrow-callback": 0,
    "max-len": ["error", {
      "code": 80
    }]
  },
  "settings": {
    "import/resolver": {
      "webpack": {}
    }
  },
  "globals": {
    "browser": true
  }
}
